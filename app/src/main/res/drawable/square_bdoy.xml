<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/colorred" />//边框颜色
        </shape>
    </item>
    <!--    想保留哪一边就设置哪一边边框，列如只有下边框：bottom="0.7dp"，相应的有上top="",left="",right=""    -->
    <item  android:bottom="2dp" android:left="2dp" android:top="2dp" android:right="2dp" >
        <shape>
            <solid android:color="@color/colorwhite" />//整个框背景颜色
        </shape>
    </item>
</layer-list>

